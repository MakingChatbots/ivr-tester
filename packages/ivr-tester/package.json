{
  "name": "ivr-tester",
  "version": "1.0.0",
  "description": "An automated testing framework for IVR call flows",
  "license": "MIT",
  "author": "Lucas Woodward",
  "repository": {
    "type": "git",
    "url": "https://github.com/SketchingDev/ivr-tester.git"
  },
  "homepage": "https://github.com/SketchingDev/ivr-tester#ivr-tester",
  "keywords": [
    "IVR",
    "Interactive Voice Response",
    "call flow",
    "call",
    "test",
    "telephony"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest src",
    "test:integration": "jest __tests__/integration",
    "clean": "rimraf dist/",
    "build:dtmf-tones": "./generate-dtmf-tones.sh",
    "build": "yarn clean && tsc -p tsconfig.build.json --declaration && yarn copy:dtmf-tones",
    "lint:prettier": "prettier --list-different 'src/**/*.ts' --write",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "copy:dtmf-tones": "copyfiles -u 1 src/**/dtmf/**/*.raw dist",
    "doc": "yarn typedoc",
    "prepare": "yarn build"
  },
  "files": [
    "/dist"
  ],
  "dependencies": {
    "debug": "^4.3.4",
    "joi": "^17.7.0",
    "ws": "^8.12.0"
  },
  "peerDependencies": {
    "twilio": "3.84.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.2.6",
    "@types/node": "^16.10.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.3.2",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "twilio": "3.84.1",
    "typedoc": "^0.23.15",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.9.4"
  },
  "jest": {
    "preset": "../../jest.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "~16.10.0"
  },
  "packageManager": "yarn@3.1.1"
}
