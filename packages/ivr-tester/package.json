{
  "name": "ivr-tester",
  "version": "0.1.2",
  "description": "An automated testing framework for IVR call flows",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SketchingDev/ivr-tester.git"
  },
  "homepage": "https://github.com/SketchingDev/ivr-tester#ivr-tester",
  "keywords": [
    "ivr",
    "call flow",
    "test"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest src",
    "clean": "rimraf dist/",
    "build:dtmf-tones": "./generate-dtmf-tones.sh",
    "build": "yarn clean && tsc --declaration",
    "postbuild": "yarn copy:dtmf-tones",
    "lint:prettier": "prettier --list-different 'src/**/*.ts' --write",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "copy:dtmf-tones": "copyfiles -u 1 src/**/dtmf/**/*.raw dist",
    "doc": "yarn typedoc",
    "prepare": "yarn build"
  },
  "files": [
    "/dist"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "debug": "^4.3.1",
    "filenamify": "^4.2.0",
    "getenv": "^1.0.0",
    "log-symbols": "^4.0.0",
    "string-similarity": "^4.0.2",
    "twilio": "^3.55.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/filenamify": "^2.0.2",
    "@types/getenv": "^1.0.0",
    "@types/jest": "^26.0.14",
    "@types/jest-when": "^2.7.1",
    "@types/node": "^14.6.4",
    "@types/string-similarity": "^3.0.0",
    "@types/ws": "^7.2.6",
    "copyfiles": "^2.4.0",
    "get-port": "^5.1.1",
    "jest": "^26.4.2",
    "jest-when": "^2.7.2",
    "ngrok": "^3.2.7",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.3",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">= 10.14.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
