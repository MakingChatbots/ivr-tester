{
  "name": "ivr-tester",
  "version": "0.2.12",
  "description": "An automated testing framework for IVR call flows",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SketchingDev/ivr-tester.git"
  },
  "homepage": "https://github.com/SketchingDev/ivr-tester#ivr-tester",
  "keywords": [
    "IVR",
    "Interactive Voice Response",
    "call flow",
    "call",
    "test",
    "telephony"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest src",
    "test:integration": "jest __tests__/integration",
    "clean": "rimraf dist/",
    "build:dtmf-tones": "./generate-dtmf-tones.sh",
    "build": "yarn clean && tsc -p tsconfig.build.json --declaration",
    "postbuild": "yarn copy:dtmf-tones",
    "lint:prettier": "prettier --list-different 'src/**/*.ts' --write",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "copy:dtmf-tones": "copyfiles -u 1 src/**/dtmf/**/*.raw dist",
    "doc": "yarn typedoc",
    "prepare": "yarn build",
    "tool:audio-server": "node --require ts-node/register tools/audio-server.ts"
  },
  "files": [
    "/dist"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "debug": "^4.3.1",
    "joi": "^17.4.0",
    "string-similarity": "^4.0.4",
    "twilio": "^3.57.0",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^7.0.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.6.4",
    "@types/string-similarity": "^4.0.0",
    "@types/ws": "^7.4.0",
    "copyfiles": "^2.4.0",
    "get-port": "^5.1.1",
    "jest": "^26.4.2",
    "ngrok": "^3.4.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "wait-for-expect": "^3.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">= 10.14.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
